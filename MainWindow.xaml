<Window x:Class="CableSubscriberApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscriber List"
        Height="650"
        Width="1400">

    <DockPanel>

        <!-- HEADER -->
        <Border DockPanel.Dock="Top"
                Background="#D44A1C"
                Height="60">
            <TextBlock Text="Subscriber List"
                       Foreground="White"
                       FontSize="22"
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </Border>

        <!-- FILTER BAR -->
        <Border DockPanel.Dock="Top"
                Background="#F5F5F5"
                Padding="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SEARCH -->
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="SearchBox"
                         Grid.Column="1"
                         Height="28"
                         Margin="5"
                         VerticalContentAlignment="Center"
                         TextChanged="ApplyFilters"/>

                <!-- STATUS -->
                <TextBlock Text="Status:" Grid.Column="2"
                           VerticalAlignment="Center"
                           Margin="15,5,5,5"/>
                <ComboBox x:Name="StatusFilter"
                          Grid.Column="3"
                          Height="28"
                          Margin="5"
                          SelectionChanged="ApplyFilters"/>

                <!-- COMPANY -->
                <TextBlock Text="Company:" Grid.Column="4"
                           VerticalAlignment="Center"
                           Margin="15,5,5,5"/>
                <ComboBox x:Name="CompanyFilter"
                          Grid.Column="5"
                          Height="28"
                          Margin="5"
                          SelectionChanged="CompanyFilter_SelectionChanged"/>

                <!-- AREA -->
                <TextBlock Text="Area:" Grid.Column="6"
                           VerticalAlignment="Center"
                           Margin="15,5,5,5"/>
                <ComboBox x:Name="AreaFilter"
                          Grid.Column="7"
                          Height="28"
                          Margin="5"
                          SelectionChanged="ApplyFilters"/>

                <!-- ACTION BUTTONS -->
                <StackPanel Grid.Column="8"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="New Subscriber" Margin="5" Click="NewSubscriber_Click"/>
                    <Button Content="Edit Subscriber" Margin="5" Click="EditSubscriber_Click"/>
                    <Button Content="Delete Subscriber" Margin="5" Click="DeleteSubscriber_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DATA GRID -->
        <DataGrid x:Name="SubscriberGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="10"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding SubscriberName}" Width="160"/>
                <DataGridTextColumn Header="Phone 1" Binding="{Binding PhoneNumber1}" Width="120"/>
                <DataGridTextColumn Header="Phone 2" Binding="{Binding PhoneNumber2}" Width="120"/>
                <DataGridTextColumn Header="Nick Name" Binding="{Binding NickName}" Width="120"/>
                <DataGridTextColumn Header="Set Top Box" Binding="{Binding SetTopBoxNumber}" Width="140"/>
                <DataGridTextColumn Header="Rent" Binding="{Binding RentAmount}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Area" Binding="{Binding AreaName}" Width="160"/>
                <DataGridTextColumn Header="Company" Binding="{Binding CompanyName}" Width="160"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="220"/>
            </DataGrid.Columns>

        </DataGrid>

    </DockPanel>
</Window>
