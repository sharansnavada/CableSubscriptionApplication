<Window x:Class="CableSubscriberApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscriber List"
        Height="650"
        Width="1300">

    <DockPanel>

        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Background="#D44A1C" Height="60">
            <TextBlock Text="Subscriber List"
                       Foreground="White"
                       FontSize="22"
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </Border>

        <!-- TOOLBAR -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Background="#EFEFEF"
                    Margin="10">

            <Button Content="New Subscriber" Click="NewSubscriber_Click" Margin="5"/>
            <Button Content="Edit Subscriber" Click="EditSubscriber_Click" Margin="5"/>
            <Button Content="Delete Subscriber" Click="DeleteSubscriber_Click" Margin="5"/>

            <TextBox x:Name="SearchBox"
                     Width="260"
                     Height="28"
                     Margin="30,0,0,0"
                     TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <!-- GRID -->
        <DataGrid x:Name="SubscriberGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="10"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding SubscriberName}" Width="150"/>
                <DataGridTextColumn Header="Phone 1" Binding="{Binding PhoneNumber1}" Width="120"/>
                <DataGridTextColumn Header="Phone 2" Binding="{Binding PhoneNumber2}" Width="120"/>
                <DataGridTextColumn Header="Nick Name" Binding="{Binding NickName}" Width="120"/>
                <DataGridTextColumn Header="Rent" Binding="{Binding RentAmount}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Area" Binding="{Binding AreaName}" Width="150"/>
                <DataGridTextColumn Header="Company" Binding="{Binding CompanyName}" Width="150"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
            </DataGrid.Columns>

        </DataGrid>
    </DockPanel>
</Window>
